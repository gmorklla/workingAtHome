.loginContainer {
  width: 100%;
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center;
}

mat-card {
  width: 350px;
  height: 200px;
  margin: 0 auto;
  background-color: rgba(255, 255, 255, 0.7) !important;
}

mat-form-field {
  width: 100%;
}

mat-card-actions {
  display: flex;
  margin: 24px auto;
}

button {
  margin: 0 auto !important;
  color: white !important;
}

p {
  text-align: center;
}

mat-card-actions a {
  color: #16568a;
  font-size: x-small;
}

.logoutCard {
  display: flex;
  height: auto;
  flex-flow: column;
  justify-content: center;
  box-shadow: none !important;
}

/* Small screens */

@media all and (max-width: 800px) {
  mat-card {
    width: 100%;
    margin: 0;
  }

  app-link-login {
    margin: 0 12px;
  }
}
