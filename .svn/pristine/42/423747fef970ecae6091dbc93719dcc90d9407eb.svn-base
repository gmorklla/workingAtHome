form {
  display: flex;
  flex-direction: column;
}

mat-slide-toggle {
  margin-bottom: 10px;
}

.checks {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

mat-checkbox {
  margin-right: 10px;
}

#color1,
#color2 {
  border: 1px solid lightgray;
  border-radius: 3px;
  padding: 5px;
  box-sizing: border-box;
  margin-top: 5px;
}

label {
  font-size: x-small;
  color: #7d7d7d;
}

div.ejemplo {
  width: 100%;
  height: 500px;
  border: 1px solid gray;
}
