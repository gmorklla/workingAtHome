  <mat-form-field class="range-margin">
    <input
      matInput
      type="number"
      placeholder="Valor mínimo"
      [(ngModel)]="min"
      (ngModelChange)="onChange($event, 'min')"
    >
  </mat-form-field>
  <mat-form-field class="range-margin">
    <input
      matInput
      type="number"
      placeholder="Valor máximo"
      [(ngModel)]="max"
      (ngModelChange)="onChange($event, 'max')"
    >
  </mat-form-field>
  <mat-form-field class="range-margin">
    <input
      matInput
      type="number"
      placeholder="Tamaño de paso"
      [(ngModel)]="step"
      (ngModelChange)="onChange($event, 'step')"
    >
  </mat-form-field>
</section>

<section class="range-section">
  <mat-checkbox
    class="range-margin"
    [(ngModel)]="showTicks"
    (ngModelChange)="onChange($event, 'showTicks')"
  >Muestra tick</mat-checkbox>
  <mat-checkbox
    class="range-margin"
    [(ngModel)]="autoTicks"
    (ngModelChange)="onChange($event, 'autoTicks')"
    *ngIf="showTicks"
  >
    Ticks automáticas
  </mat-checkbox>
  <mat-form-field
    class="range-margin"
    *ngIf="showTicks && !autoTicks"
  >
    <input
      matInput
      type="number"
      placeholder="Intervalo"
      [(ngModel)]="tickInterval"
      (ngModelChange)="onChange($event, 'tickInterval')"
    >
  </mat-form-field>
</section>

<section class="range-section">
  <mat-checkbox
    class="range-margin"
    [(ngModel)]="thumbLabel"
    (ngModelChange)="onChange($event, 'thumbLabel')"
  >Muestra etiqueta</mat-checkbox>
</section>

<section class="range-section">
  <mat-checkbox
    class="range-margin"
    [(ngModel)]="vertical"
    (ngModelChange)="onChange($event, 'vertical')"
  >Vertical</mat-checkbox>
</section>

<section class="range-section">
  <mat-checkbox
    class="range-margin"
    [(ngModel)]="disabled"
    (ngModelChange)="onChange($event, 'disabled')"
  >Deshabilitar</mat-checkbox>
</section>
