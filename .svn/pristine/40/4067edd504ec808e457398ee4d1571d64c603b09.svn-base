input {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}

.item {
  width: auto;
  height: auto;
  overflow: hidden;
  color: white;
  font-size: 10px;
  position: absolute;
  padding: 1px;
  background-color: transparent;
  border-radius: 5px;
}

div {
  display: flex;
  justify-content: space-between;
}
