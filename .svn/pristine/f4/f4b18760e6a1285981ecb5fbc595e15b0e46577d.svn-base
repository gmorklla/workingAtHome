.wrapper {
  display: flex;
  flex-flow: row wrap;
  height: 100%;
  box-sizing: border-box;
  padding-top: 64px;
}

.wrapper>* {
  padding: 10px 15px;
}

.header {
  background: lightgray;
  flex: 1 0 100%;
}

.window {}

.window mat-list-item {
  position: absolute;
}

.window mat-list-item h4 {
  display: none;
}

.main {
  display: flex;
  flex-flow: column;
  flex: 1 0 100%;
  overflow: scroll;
  max-height: 100%;
}

.aside-1 {
  border-right: 1px solid lightgray;
  background-color: white;
  box-shadow: 0 0 10px #dadada;
  overflow: scroll;
  max-height: 100%;
  overflow-x: hidden;
}

.aside-1>* {
  cursor: pointer;
}

.aside-2 {
  background: #e4e4e4;
  overflow: scroll;
  max-height: 100%;
  overflow-x: hidden;
  flex: 1 0 75px !important;
}

.mat-list-icon {
  color: rgba(0, 0, 0, 0.54);
}

.item {
  width: auto;
  height: auto;
  overflow: hidden;
  color: white;
  font-size: 10px;
  position: absolute;
  padding: 1px;
  background-color: transparent;
  border-radius: 5px;
}

.contenedor {
  width: 100%;
  height: 100%;
  position: relative;
  /* border: 1px dotted gray; */
}

mat-list-item {
  border-bottom: 1px dotted lightgray;
}

.selected {
  box-shadow: 5px 5px 10px #00000030
}

/*
 *  Scrollbar
 */

.aside-1::-webkit-scrollbar-track,
.aside-2::-webkit-scrollbar-track {
  -webkit-box-shadow: inset 0 0 6px rgba(0, 0, 0, 0.3);
  border-radius: 10px;
  background-color: #F5F5F5;
}

.aside-1::-webkit-scrollbar,
.aside-2::-webkit-scrollbar {
  width: 12px;
  background-color: #F5F5F5;
}

.aside-1::-webkit-scrollbar-thumb,
.aside-2::-webkit-scrollbar-thumb {
  border-radius: 10px;
  -webkit-box-shadow: inset 0 0 6px rgba(0, 0, 0, .3);
  background-color: lightgray;
}

.leftDragger {
  width: 15px;
  height: 50px;
  background-color: lightgray;
  border-radius: 5px;
  position: absolute;
  top: 48%;
  left: 220px;
  border-top-left-radius: 0;
  border-bottom-left-radius: 0;
  cursor: e-resize;
}

.aside-1.ng-resizable .ng-resizable-handle {
  width: 10px;
  height: 100%;
  border-top-right-radius: 0;
  border-bottom-right-radius: 0;
  cursor: e-resize;
  padding-right: 5px;
  border-top-left-radius: 10px;
  border-bottom-left-radius: 10px;
  border-left: 3px dashed #dadada;
}

@media all and (min-width: 600px) {
  .aside {
    flex: 1 0 0;
  }
}

@media all and (min-width: 800px) {
  .main {
    flex: 3 0px;
  }

  .aside-1 {
    order: 1;
  }

  .main {
    order: 2;
  }

  .aside-2 {
    order: 3;
  }

  .footer {
    order: 4;
  }
}
