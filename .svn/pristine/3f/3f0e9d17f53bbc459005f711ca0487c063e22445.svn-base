import { Injectable } from '@angular/core';

@Injectable({
  providedIn: 'root'
})
export class RenderCheckboxService {

  constructor() { }

  stringToObj(styles: string): { [key: string]: any } {
    if (styles) {
      const styleObj = styles
        .split(';')
        .filter(val => val !== '')
        .map(val => {
          const arr = val.split(':');
          const obj = {};
          obj[arr[0]] = arr[1];
          return obj;
        })
        .reduce((prev, curr) => {
          return { ...prev, ...curr };
        });

      // Se añaden estas líneas debido a que esos atributos no están viajando con el px
      styleObj['width'] = styleObj['width'] + 'px';
      styleObj['height'] = styleObj['height'] + 'px';

      return styleObj;
    }
  }
}
