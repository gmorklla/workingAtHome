.chat {
  width: 100%;
  overflow-y: scroll;
}

.listMsgContainer {
  max-width: 100%;
  padding: 0 2px 10px;
}

.listMsgContainer mat-card {
  max-width: 100%;
  height: auto;
  background-color: rgba(255, 255, 255, 0.7) !important;
  margin-bottom: 15px;
  border-radius: 20px;
}

.listMsgContainer mat-card.left {
  margin-left: 40px;
  border-top-right-radius: 0;
}

.listMsgContainer mat-card.right {
  margin-right: 40px;
  border-top-left-radius: 0;
}

.listMsgContainer mat-card-content {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-content: space-between;
}

.name {
  width: 100%;
  height: 1em;
  margin-bottom: 5px;
  color: #eb1461;
  text-transform: uppercase;
  font-size: small;
  display: flex;
  align-items: center;
}

.txt {
  width: 100%;
}
