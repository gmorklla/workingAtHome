.mainContainer {
  width: 100%;
  height: 100%;
}

.routerContainer {
  padding: 5px 1%;
}

img.bg {
  /* Set rules to fill background */
  min-height: 100%;
  min-width: 1024px;

  /* Set up proportionate scaling */
  width: 100%;
  height: auto;

  /* Set up positioning */
  position: fixed;
  top: 0;
  left: 0;
  z-index: -1;
  opacity: 0.5;
}

.gradient {
  width: 100%;
  height: 100%;
  /* Set up positioning */
  position: fixed;
  top: 0;
  left: 0;
  z-index: -1;
  background: linear-gradient(to bottom, rgba(255, 255, 255, 0.5), hsla(240, 8%, 85%, 0.5));
}

.alternate-theme .gradient {
  background: linear-gradient(to bottom, rgba(255, 255, 255, 0.5), hsla(199, 48%, 48%, 0.3));
}

@media screen and (max-width: 1024px) {

  /* Specific to this particular image */
  img.bg {
    left: 50%;
    margin-left: -512px;
    /* 50% */
  }
}

/* Small screens */

@media all and (max-width: 800px) {
  .routerContainer {
    padding: 0;
  }
}
